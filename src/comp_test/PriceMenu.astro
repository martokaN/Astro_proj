---
// src/components/Pricing.astro
const { plans } = Astro.props;
---
<div class="my-10">
  {plans.map((plan, index) => (
    <div class="rounded-2xl border border-gray-300 p-6 shadow-md transition hover:shadow-lg my-6">
      <div class="flex justify-between items-start">
        <div>
          <h2 class="text-xl font-semibold">{plan.name}</h2>
          <p class="text-2xl font-bold text-gray-800 mt-1">{plan.price}</p>
          <p class="text-gray-600 mt-2">{plan.info}</p>
        </div>
        <button
          type="button"
          class="text-sm text-blue-600 hover:underline"
          on:click={() => {
            const el = document.getElementById(`photos-${index}`);
            if (el) el.classList.toggle('hidden');
          }}
        >
          Show Photos
        </button>
      </div>

      <div id={`photos-${index}`} class="hidden mt-4 grid grid-cols-2 sm:grid-cols-3 gap-2">
        {plan.photos.map((photoUrl, i) => (
          <img
            src={photoUrl}
            alt={`Photo ${i + 1}`}
            class="rounded-lg object-cover w-full h-32"
            loading="lazy"
          />
        ))}
      </div>
    </div>
  ))}
</div>
