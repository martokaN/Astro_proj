---
import '../styles/global.css';
---

<header class="bg-gradient-to-r from-background to-specialbg shadow-lg fixed w-full top-0 left-0 z-50 before:content-[''] before:absolute before:inset-0 before:bg-background before:opacity-95 before:-z-10">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-32">
      <!-- Brand logo/name -->
      <div class="flex-shrink-0 flex items-center">
        <a href="/" class="text-xl font-bold text-heading hover:text-hover transition-colors">
          Pualani Creative
        </a>
      </div>
      
      <!-- Mobile menu button -->
      <div class="flex md:hidden">
        <button type="button" id="mobile-menu-button" class="inline-flex items-center justify-center p-2 rounded-md text-text hover:text-hover hover:bg-background focus:outline-none focus:ring-2 focus:ring-button">
          <span class="sr-only">Open main menu</span>
          <!-- Icon when menu is closed -->
          <svg id="menu-closed-icon" class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <!-- Icon when menu is open -->
          <svg id="menu-open-icon" class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      
      <!-- Desktop menu -->
      <nav class="hidden md:flex space-x-8">
        <a href="/portfolio" class="text-text hover:text-heading hover:underline underline-offset-8 decoration-2 px-3 py-2 text-lg font-medium">Portfolio</a>
        <a href="/pricing" class="text-text hover:text-heading hover:underline underline-offset-8 decoration-2 px-3 py-2 text-lg font-medium">Pricing</a>
        <a href="/floral-arrangement" class="text-text hover:text-heading hover:underline underline-offset-8 decoration-2 px-3 py-2 text-lg font-medium">Floral Arrangement</a>
        <a href="/about" class="text-text hover:text-heading hover:underline underline-offset-8 decoration-2 px-3 py-2 text-lg font-medium">About Me</a>
        <a href="/book" class="ml-8 inline-flex items-center px-4 py-2 border border-border text-lg font-medium rounded-md text-buttontext bg-button hover:bg-hover focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-heading transition-colors">
          Book Your Session
        </a>
      </nav>
    </div>
  </div>

  <!-- Mobile menu, show/hide based on menu state -->
  <div id="mobile-menu" class="hidden md:hidden bg-background">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
      <a href="/portfolio" class="text-text hover:text-heading block px-3 py-2 text-base font-medium">Portfolio</a>
      <a href="/pricing" class="text-text hover:text-heading block px-3 py-2 text-base font-medium">Pricing</a>
      <a href="/floral-arrangement" class="text-text hover:text-heading block px-3 py-2 text-base font-medium">Floral Arrangement</a>
      <a href="/about" class="text-text hover:text-heading block px-3 py-2 text-base font-medium">About Me</a>
      <a href="/book" class="block w-full text-center mt-4 px-4 py-2 border border-border text-base font-medium rounded-md text-buttontext bg-button hover:bg-hover">
        Book Your Session
      </a>
    </div>
  </div>
</header>

<script>
  // Handle mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuOpenIcon = document.getElementById('menu-open-icon');
  const menuClosedIcon = document.getElementById('menu-closed-icon');

  mobileMenuButton?.addEventListener('click', () => {
    const isMenuOpen = mobileMenu?.classList.contains('hidden');
    
    if (isMenuOpen) {
      mobileMenu?.classList.remove('hidden');
      menuOpenIcon?.classList.remove('hidden');
      menuClosedIcon?.classList.add('hidden');
    } else {
      mobileMenu?.classList.add('hidden');
      menuOpenIcon?.classList.add('hidden');
      menuClosedIcon?.classList.remove('hidden');
    }
  });
</script>