---
import p1 from "../assets/about/photo1.jpg";
import p2 from "../assets/about/photo2.jpg";

import { Image } from 'astro:assets';
---

<div class="flex flex-col md:flex-row my-8 relative">
    <div>
        <Image
        class="absolute top-0 left-0 translate-y-10"
        src={p1}
        alt="Portrait"
        height=400>
        </Image>

        <Image
        class="absolute top-0 left-0 translate-x-10"
        src={p2}
        alt="Portrait"
        height=400>
        </Image>
    </div>
</div>